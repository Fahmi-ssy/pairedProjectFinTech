<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Investment</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Include Header -->
    <%- include('header') %>

    <div class="container mt-5">
        <h1>Add New Investment</h1>

        <form action="/investments" method="POST">
            <!-- Investment Name -->
            <div class="mb-3">
                <label for="name" class="form-label">Investment Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <!-- Investment Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
            </div>

            <!-- Investment Amount -->
            <div class="mb-3">
                <label for="amount" class="form-label">Amount</label>
                <input type="number" step="0.01" class="form-control" id="amount" name="amount" required>
            </div>

            <!-- Company Dropdown -->
            <div class="mb-3">
                <label for="company" class="form-label">Company</label>
                <select class="form-select" id="company" name="CompanyId" required>
                    <% companies.forEach(company => { %>
                        <option value="<%= company.id %>"><%= company.name %> (<%= company.description %>)</option>
                    <% }) %>
                </select>
            </div>

            <!-- Investment Type Dropdown -->
            <div class="mb-3">
                <label for="investmentType" class="form-label">Investment Type</label>
                <select class="form-select" id="investmentType" name="InvestmentTypeId" required>
                    <% investmentTypes.forEach(type => { %>
                        <option value="<%= type.id %>"><%= type.currency %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit Investment</button>
        </form>
    </div>

    <!-- Include Bootstrap JS from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
