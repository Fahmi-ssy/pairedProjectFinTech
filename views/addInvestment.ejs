<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Investment</title>
    <link rel="stylesheet" href="/path/to/bootstrap.css"> <!-- Include Bootstrap CSS -->
</head>
<body>
    <%- include('header') %> <!-- Include the header -->

    <div class="container mt-5">
        <h1>Add New Investment</h1>

        <form action="/investments" method="POST">
            <!-- Investment Name -->
            <div class="form-group">
                <label for="name">Investment Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <!-- Investment Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
            </div>

            <!-- Investment Amount -->
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="number" step="0.01" class="form-control" id="amount" name="amount" required>
            </div>

            <!-- Company Dropdown -->
            <div class="form-group">
                <label for="company">Company</label>
                <select class="form-control" id="company" name="CompanyId" required>
                    <% companies.forEach(company => { %>
                        <option value="<%= company.id %>"><%= company.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Investment Type Dropdown -->
            <div class="form-group">
                <label for="investmentType">Investment Type</label>
                <select class="form-control" id="investmentType" name="InvestmentTypeId" required>
                    <% investmentTypes.forEach(type => { %>
                        <option value="<%= type.id %>"><%= type.currency %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit Investment</button>
        </form>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="/path/to/bootstrap.js"></script>
</body>
</html>
