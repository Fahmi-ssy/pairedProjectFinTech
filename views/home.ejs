<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Companies</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('header') %>
    <div class="container mt-5">
        <% if (user) { %>
            <h1>Welcome, <%= user.name %>!</h1>
        <% } else { %>
            <h1>Welcome to our Companies Directory!</h1>
            <p><a href="/login">Login</a> or <a href="/register">Register</a> to make an investment.</p>
        <% } %>

        <div class="row">
            <% companies.forEach(company => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= company.companyLogo %>" class="card-img-top" alt="<%= company.name %> Logo">
                        <div class="card-body">
                            <h5 class="card-title"><%= company.name %></h5>
                            <p class="card-text"><%= company.description %></p>
                            <a href="mailto:<%= company.email %>" class="btn btn-primary">Contact</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

